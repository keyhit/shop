<div class="show_product">
  <h3 class="show_product_title">
    <%= @product.title %>
  </h3>
  <div class="show_product_images">
    <% @product.avatars.each do |avatar|  %>
      <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
          <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
          <div class="carousel-item active">
            <%= image_tag(avatar.url, alt: "avatar", class: "d-block w-100") if avatar.url %>
            <img class="d-block w-100" src="..." alt="First slide">
          </div>
          <div class="carousel-item">
            <img class="d-block w-100" src="..." alt="Second slide">
          </div>
          <div class="carousel-item">
            <img class="d-block w-100" src="..." alt="Third slide">
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>

        <%#= image_tag(avatar.url, alt: "avatar", style: 'width: 10%') if avatar.url %>
    <% end %>

   </div>
  
  <div class="show_product_info">
    <p>
      <ul>
        <li>
         <b>Id: </b><%= @product.id %>
        </li>
        <li>
          <b>Price: </b><%= @product.price %>
        </li>
        <li>
          <b>In_stock: </b><%= @product.in_stock %>
        </li>
        <li>
          <b>Category:  </b><%= @product.category.name %>
        </li>
      </ul>
    </p>
 
    <p>
      <b>Short_description: </b><%= @product.short_description %>
    </p>
 
    <p>
      <b>Full_description: </b><%= @product.full_description %>
    </p>
 
 
  </div>
  <div class="show_product_actions"> 
    <%= link_to "Edit",
      edit_category_product_path(category_id: @product.category_id, id: @product),
      class: "show_product_actions_links" %>
    <%= link_to "Add to cart",
      edit_category_product_path(category_id: @product.category_id, id: @product),
      class: "show_product_actions_links" %>
  </div>
</div>